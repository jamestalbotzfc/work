                                <Ellipse x:Name="circle" Fill="{StaticResource Toggle.Bad.Circle.Fill}" HorizontalAlignment="Center" Height="19" Stroke="{StaticResource Toggle.Bad.Circle.Border}" VerticalAlignment="Center" Width="19"/>
